@model ServiceAppointmentSystem.Models.Entities.OrderHeader

@{
    ViewData["Title"] = "Orders & Transactions";

    var status = Context.Request.Query["status"];
    var pending = "text-primary";
    var inprocess = "text-primary";
    var completed = "text-primary";
    var all = "text-primary";

    switch (status)
    {
        case "pending":
            pending = "bg-dark text-white";
            break;
        case "inprocess":
            inprocess = "bg-dark text-white";
            break;
        case "completed":
            completed = "bg-dark text-white";
            break;
        case "all":
            all = "bg-dark text-white";
            break;
    }

}
<div class="row">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Administrator</a></li>
                            <li class="breadcrumb-item">Orders</li>
                            <li class="breadcrumb-item active">Index</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Orders & Transactions</h4>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <div class="pt-2 mb-2">
                <a class="btn btn-dark">
                    <i class="fa-solid fa-file-excel"></i> Export to Excel
                </a>
                <a class="btn btn-dark">
                    <i class="fa-solid fa-file-pdf"></i> Export to PDF
                </a>
            </div>
            <div class="pt-2 mb-2">
                <ul class="list-group list-group-horizontal-sm">
                    <a style="text-decoration: none;" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
                        <li class="list-group-item @inprocess">In Process</li>
                    </a>
                    <a style="text-decoration: none;" asp-controller="Order" asp-action="Index" asp-route-status="pending">
                        <li class="list-group-item @pending">Payment Pending</li>
                    </a>
                    <a style="text-decoration: none;" asp-controller="Order" asp-action="Index" asp-route-status="completed">
                        <li class="list-group-item @completed">Completed</li>
                    </a>
                    <a style="text-decoration: none;" asp-controller="Order" asp-action="Index" asp-route-status="all">
                        <li class="list-group-item @all">All</li>
                    </a>
                </ul>
            </div>
        </div>
        <table id="tableData" class="table table-bordered table-striped">
            <thead>
            <tr class="table-info">
                <th class="text-center">#</th>
                <th class="text-center">Customer</th>
                <th class="text-center">Phone Number</th>
                <th class="text-center">Email</th>
                <th class="text-center">Order Status</th>
                <th class="text-center">Order Total</th>
                <th class="text-center">Options</th>
            </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}
