@model IEnumerable<ServiceAppointmentSystem.Models.Entities.Item>

@{
    ViewData["Title"] = "Products";
}

<partial name="_Notification" />

<div class="row">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Administrator</a></li>
                            <li class="breadcrumb-item">Products</li>
                            <li class="breadcrumb-item active">Index</li>
                        </ol>
                    </div>
                    <h4 class="page-title">List of Products</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-6">
                        <a class="btn btn-dark" asp-area="Admin" asp-controller="Item" asp-action="DownloadSheet">
                            <i class="fa-solid fa-file-excel"></i> Export to Excel
                        </a>
                        <a class="btn btn-dark">
                            <i class="fa-solid fa-file-pdf"></i> Export to PDF
                        </a>
                    </div>
                    <div class="col-6 text-end">
                        <a class="btn btn-primary" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Create A New Product</a>
                    </div>
                </div>
                <table id="tableData" class="table table-striped table-bordered" style="width:100%">
                    <thead class="mt-2">
                        <tr class="table-info">
                            <th class="text-center">Item Name</th>
                            <th class="text-center">List Price</th>
                            <th class="text-center">Price for 20 Items</th>
                            <th class="text-center">Price for 50 Items</th>
                            <th class="text-center">Service Item</th>
                            <th class="text-center">Options</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td class="text-end">Rs @item.ListPrice</td>
                                <td class="text-end">Rs @item.Price20</td>
                                <td class="text-end">Rs @item.Price50</td>
                                <td>@item.Service?.Name</td>
                                <td>
                                    <a href="@Url.Action("Upsert", "Item", new { id=item.Id })" class="btn btn-primary btn-sm"><i class="fa fa-cogs"></i></a>
                                    <a href="@Url.Action("Delete", "Item", new { id=item.Id })" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a> 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div> 
        </div> 
    </div>
</div> 

@section Scripts{
    <script>
        $("#tableData").DataTable();
    </script>
}