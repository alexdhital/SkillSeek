@model List<ServiceAppointmentSystem.Models.Entities.Service>

@{
    ViewData["Title"] = "Services";
}

<partial name="_Notification" />

<div class="row">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Administrator</a></li>
                            <li class="breadcrumb-item">Services</li>
                            <li class="breadcrumb-item active">Index</li>
                        </ol>
                    </div>
                    <h4 class="page-title">List of Services</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-6">
                        <a class="btn btn-dark">
                            <i class="fa-solid fa-file-excel"></i> Export to Excel
                        </a>
                        <a class="btn btn-dark">
                            <i class="fa-solid fa-file-pdf"></i> Export to PDF
                        </a>
                    </div>
                    <div class="col-6 text-end">
                        <a class="btn btn-primary" asp-action="Upsert"><i class="fa-solid fa-plus"></i> &nbsp; Create A New Service</a>
                    </div>
                </div>
                <table id="datatable-buttons" class="table table-striped table-bordered w-100">
                <thead class="mt-2">
                    <tr class="table-info">
                        <th>Title</th>
                        <th>Role</th>
                        <th>Base Price</th>
                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Role</td>
                            <td class="text-end">Rs @item.BasePrice</td>
                            <td>
                                <div class="text-center">
                                    <a href="/Admin/Service/Upsert/@item.Id" class="btn btn-info text-white" style="cursor: pointer">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a href="/Admin/Service/Delete/@item.Id" class="btn btn-danger text-white" style="cursor: pointer">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div> 
        </div> 
    </div>
</div> 

@section Scripts{
    <script>
        $("#datatable-buttons").DataTable();
    </script>
}