@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5 position-relative">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-xxl-5 col-lg-5">
				<div class="card">
					<div class="card-body p-4">
						<div class="text-center w-75 m-auto">
							<h4 class="text-dark-50 text-center mt-0 fw-bold">Sign In</h4>
							<p class="text-muted mb-4">Enter your email address and password to access your service panel.</p>
						</div>
						<div class="row">
							<form id="account" method="post">
	                            <hr />
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="col-12">
									<div class="mb-3">
										<label asp-for="Input.Email" class="pb-2"></label>
										<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
										<span asp-validation-for="Input.Email" class="text-danger"></span>
									</div>
								</div>
								<div class="col-12">
									<div class="mb-3">
										<label asp-for="Input.Password" class="pb-2"></label>
										<input asp-for="Input.Password" class="form-control" autocomplete="off" type="password" aria-required="true" />
										<span asp-validation-for="Input.Email" class="text-danger"></span>
									</div>
								</div>
								<div class="col-12 mb-3">
									<div class="checkbox">
										<input type="checkbox" id="passcode" class="form-check-input me-2" onclick="showpasswordinitial(this);"  />
										Show Password
										<script type="text/javascript">
											function showpasswordinitial(check_box) {
												var spass = document.getElementById("passcode");
												if (check_box.checked)
													spass.setAttribute("type", "text");
												else
													spass.setAttribute("type", "password");
											}
										</script>
									</div>
								</div>
								<div class="row m-0">
									<div class="col-6 p-0">
										<div class="checkbox">
											<label asp-for="Input.RememberMe" class="form-label">
												<input class="form-check-input me-2" asp-for="Input.RememberMe" />
												@Html.DisplayNameFor(m => m.Input.RememberMe)
											</label>
										</div>
									</div>
									<div class="col-6">
										<div class="text-end">
											<button class="btn btn-primary" type="submit"> Login </button>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div> 
				</div>
				<div class="row mt-3">
					<div class="col-12 text-center">
						<p class="text-muted">Don't have an account yet? <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-muted ms-1"><b>Sign Up</b></a></p>
						<p class="text-muted">Forgot your password? <a asp-area="Identity" asp-page="./ForgotPassword" class="text-muted ms-1"><b>Click Here</b></a></p>
						<p class="text-muted">Resend email confirmation? <a asp-area="Identity" asp-page="./ResendEmailConfirmation" class="text-muted ms-1"><b>Click Here</b></a></p>
					</div>
				</div>
			</div> 
		</div>
	</div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
