<div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5 position-relative">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-xxl-8 col-lg-5">
				<div class="card">
					<div class="card-body p-4">
						<div class="text-center w-75 m-auto">
							<h4 class="text-dark-50 text-center mt-0 fw-bold">Sign In</h4>
							<p class="text-muted mb-4">Enter your email address and password to access your service panel.</p>
						</div>
						<div class="row">
							<form id="account" method="post" enctype="multipart/form-data">
								@Html.AntiForgeryToken()
								<div class="row">
									<hr/>
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="col-12">
										<div class="mb-3">
											<label asp-for="Input.FullName" class="pb-2"></label>
											<input asp-for="Input.FullName" class="form-control" autocomplete="off" aria-required="true" placeholder="Enter your full name"/>
											<span asp-validation-for="Input.FullName" class="text-danger"></span>
										</div>
									</div>
									<div class="col-6">
										<div class="mb-3">
											<label asp-for="Input.Email" class="pb-2"></label>
											<input asp-for="Input.Email" class="form-control" autocomplete="off" aria-required="true" placeholder="Enter your email address"/>
											<span asp-validation-for="Input.Email" class="text-danger"></span>
										</div>
										<div class="mb-3">
											<label asp-for="Input.RegionName" class="pb-2"></label>
											<input asp-for="Input.RegionName" class="form-control" autocomplete="off" aria-required="true" placeholder="Enter your region name"/>
											<span asp-validation-for="Input.RegionName" class="text-danger"></span>
										</div>
										<div class="mb-3">
											<label asp-for="Input.Password" class="pb-2"></label>
											<div class="input-group input-group-merge">
												<input type="password" asp-for="Input.Password" id="password" class="form-control" placeholder="Enter your password">
												<div class="input-group-text" data-password="false">
													<span class="password-eye"></span>
												</div>
											</div>
											<span asp-validation-for="Input.Password" class="text-danger"></span>
										</div>
										<div class="mb-3">
											<label asp-for="Input.ProfileImage" class="pb-2"></label>
											<input asp-for="Input.ProfileImage" class="form-control" type="file" accept=".png,.jpg,.jpeg,.gif,.tif">
										</div>
									</div>
									<div class="col-6">
										<div class="mb-3">
											<label asp-for="Input.PhoneNumber" class="pb-2"></label>
											<input asp-for="Input.PhoneNumber" class="form-control" autocomplete="off" aria-required="true" placeholder="Enter your phone number"/>
											<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
										</div>
										<div class="mb-3">
											<label asp-for="Input.CityAddress" class="pb-2"></label>
											<input asp-for="Input.CityAddress" class="form-control" autocomplete="off" aria-required="true" placeholder="Enter your city address"/>
											<span asp-validation-for="Input.CityAddress" class="text-danger"></span>
										</div>
										<div class="mb-3">
											<label asp-for="Input.ConfirmPassword" class="pb-2"></label>
											<div class="input-group input-group-merge">
												<input type="password" asp-for="Input.ConfirmPassword" id="confirm-password" class="form-control" placeholder="Enter your confirmed password">
												<div class="input-group-text" data-password="false">
													<span class="password-eye"></span>
												</div>
											</div>
											<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
										</div>
										<div class="mt-3 pt-3 text-end"> 
											<button class="btn btn-primary" type="submit" onclick="submitForm()"> Sign Up </button>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
				<div class="row mt-3">
					<div class="col-12 text-center">
						<p class="text-muted">Already have account? <a asp-area="Identity" asp-page="/Account/Login" class="text-muted ms-1"><b>Log In</b></a></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
    function submitForm() {
		let fullName = document.getElementById("Input_FullName").value;
		let email = document.getElementById("Input_Email").value;
		let regionName = document.getElementById("Input_RegionName").value;
		let password = document.getElementById("password").value;
		let confirmPassword = document.getElementById("confirm-password").value;

		if (fullName.trim() === '' || email.trim() === '' || regionName.trim() === '' || password.trim() === '' || confirmPassword.trim() === '') {
			
		}
		else {
        	document.getElementById("account").submit();
		}
		
    }
</script>